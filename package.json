{
  "name": "vc-bitstring-status-list",
  "version": "0.1.0",
  "description": "Node.js toolkit for creating and managing VC Bitstring Status Lists per W3C spec.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "next dev -p 4000",
    "build": "next build",
    "start": "next start -p 4000",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "lib:build": "tsup src/index.ts --dts --format esm,cjs --clean --tsconfig tsconfig.lib.json",
    "prepublishOnly": "npm run lib:build",
    "test": "vitest"
  },
  "keywords": [
    "verifiable-credentials",
    "status-list",
    "bitstring",
    "ssi"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.16.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "tailwindcss": "^3.4.10",
    "postcss": "^8.4.39",
    "autoprefixer": "^10.4.19"
  },
  "dependencies": {
    "next": "^14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
